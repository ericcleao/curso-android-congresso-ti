<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="io.github.wellingtoncosta.cursoandroidcongressodeti.app.ui.favoritacontato.FavoritarContatoViewModel"/>
        <variable name="viewModel" type="FavoritarContatoViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".app.ui.favoritacontato.FavoritarContatoActivity">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:title="@string/favoritar_contato"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <ProgressBar
                android:id="@+id/progress"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="@{safeUnbox(viewModel.carregando) ? View.VISIBLE : View.GONE}"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_favoritar_contato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_size_medium"
                android:layout_marginEnd="@dimen/margin_padding_size_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{() -> viewModel.favoritarContato(viewModel.contato)}"
                android:visibility="@{safeUnbox(viewModel.carregando) ? View.GONE : View.VISIBLE}"/>

        <TextView
                android:id="@+id/nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginTop="@dimen/margin_padding_size_xlarge"
                android:paddingStart="@dimen/margin_padding_size_medium"
                android:paddingEnd="@dimen/margin_padding_size_medium"
                android:paddingLeft="@dimen/margin_padding_size_medium"
                android:paddingRight="@dimen/margin_padding_size_medium"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@{viewModel.contato.nome}"
                android:visibility="@{safeUnbox(viewModel.carregando) ? View.GONE : View.VISIBLE}"/>

        <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:paddingStart="@dimen/margin_padding_size_medium"
                android:paddingEnd="@dimen/margin_padding_size_medium"
                android:paddingLeft="@dimen/margin_padding_size_medium"
                android:paddingRight="@dimen/margin_padding_size_medium"
                app:layout_constraintTop_toBottomOf="@id/nome"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@{viewModel.contato.email}"
                android:visibility="@{safeUnbox(viewModel.carregando) ? View.GONE : View.VISIBLE}"/>

        <TextView
                android:id="@+id/telefone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:paddingStart="@dimen/margin_padding_size_medium"
                android:paddingEnd="@dimen/margin_padding_size_medium"
                android:paddingLeft="@dimen/margin_padding_size_medium"
                android:paddingRight="@dimen/margin_padding_size_medium"
                android:paddingBottom="@dimen/margin_padding_size_small"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@{viewModel.contato.telefone}"
                android:visibility="@{safeUnbox(viewModel.carregando) ? View.GONE : View.VISIBLE}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
